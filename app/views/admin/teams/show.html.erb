<%= render 'shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= updates_for @team do %>
      <%= render 'shared/box', divider: true do |p| %>
        <% p.content_for :title, t('.header') %>
        <% p.content_for :description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @team %>
        <% end %>

        <% p.content_for :body do %>
          <% with_attribute_settings object: @team, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :name %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% p.content_for :actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :admin, @team], class: first_button_primary if can? :edit, @team %>
          <%= render "admin/teams/masquerade_actions/new_button_one", team: @team %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:admin, @team], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@team)) } if can? :destroy, @team %>
          <%= link_to t('global.buttons.back'), [:admin, @application, :teams], class: first_button_primary %>
        <% end %>

        <% p.content_for :raw_footer do %>
          <%= render 'admin/teams/masquerade_actions/index', team: @team, masquerade_actions: @team.masquerade_actions %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
